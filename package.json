{
  "name": "atool-build",
  "version": "0.6.0",
  "description": "Build tool based on webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/ant-tool/atool-build"
  },
  "homepage": "https://github.com/ant-tool/atool-build",
  "author": "chencheng <sorrycc@gmail.com>",
  "license": "MIT",
  "bin": {
    "atool-build": "./bin/atool-build"
  },
  "scripts": {
    "build": "rm -rf lib && ./node_modules/.bin/babel src --out-dir lib --ignore __tests__",
    "prepublish": "npm run build",
    "test": "jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --ext .js src"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "autoprefixer": "~6.3.1",
    "babel-core": "~6.5.2",
    "babel-core-resolve-enhance": "~0.1.2",
    "babel-loader": "~6.2.0",
    "babel-plugin-add-module-exports": "~0.1.2",
    "babel-plugin-typecheck": "~3.5.1",
    "babel-preset-es2015": "~6.3.13",
    "babel-preset-react": "~6.3.13",
    "babel-preset-stage-0": "~6.3.13",
    "commander": "~2.9.0",
    "css-loader": "~0.23.0",
    "extract-text-webpack-plugin": "~1.0.1",
    "file-loader": "~0.8.4",
    "json-loader": "~0.5.4",
    "less": "~2.6.0",
    "less-loader": "~2.2.0",
    "map-json-webpack-plugin": "~1.1.0",
    "postcss-loader": "~0.8.0",
    "rimraf": "~2.5.0",
    "url-loader": "~0.5.6",
    "webpack": "~1.12.2"
  },
  "devDependencies": {
    "babel-cli": "~6.4.5",
    "babel-jest": "~6.0.1",
    "coveralls": "~2.11.4",
    "eslint": "~1.10.3",
    "eslint-config-airbnb": "~3.1.0",
    "glob": "~6.0.4",
    "jest-cli": "~0.8.1",
    "jest.automockoff": "~0.1.0",
    "object-assign": "~4.0.1",
    "pre-commit": "~1.1.2"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testPathIgnorePatterns": [
      "__tests__/fixtures",
      "__tests__/expect"
    ],
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "collectCoverageOnlyFrom": {
      "src/build.js": true
    },
    "collectCoverage": true,
    "unmockedModulePathPatterns": [],
    "verbose": true
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
